pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
	
parameters { choice(name: 'CHOICES', choices: ['build', 'test'], description: '') }
    stages {
   	 stage('build'){
	 
	 when { environment name: 'VARIABLE'  , value 'build'  }
    		steps{ echo 'build'}
    	}
	 stage('test'){
	 
	 when { environment name: 'VARIABLE'  , value 'test'  }
    		steps{echo 'test'}
    	}
}
