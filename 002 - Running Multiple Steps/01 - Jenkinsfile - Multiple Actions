pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
    	stage('build'){
    		steps{
		scripts{
    			createAndPrintDate('system_date')
			sh 'sleep 10s'
			createAndPrintDate('system_date2')
			}
   		}
   	}
    }
}

def createAndPrintDate(filename='') {
	sh 'date >> $filename'
	sh 'cat $filename'
}
